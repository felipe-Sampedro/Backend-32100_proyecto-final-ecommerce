<body class="col justify-content-center">
    {{#if logout}}
        <div class="container w-50 mt-3">
            {{>logout}}
        </div>
    {{else}}
        <div class="container w-50 mt-3">
            {{>header}}
        </div>        
        <div id="contenedor-hbs" class="m-3"></div>    
    {{/if}}

    {{#if register}}
        <div class="container w-50 mt-3">

        </div>
    {{else}}
        <div class="container w-50 mt-3">
            <div class="container col-5 mt-5">        
                <div class="border p-2 m-3">            
                    <h4 class="text-center">Registro</h4>
                    <br>
                    <form id="signupForm" class="" action="/api/auth/register" method="post">
                        <div class="form-group">
                            <label for="name">Username</label>
                            <input id="username" class="form-control " type="text" name="username" required>
                        </div>
                        <!-- <div class="form-group">
                            <label for="address">Direccion</label>
                            <input id="address" class="form-control " type="text" step="0.01" name="address" required>
                        </div>    -->
                        <!-- <div class="form-group">
                            <label for="age">Edad</label>
                            <input id="age" class="form-control " type="number" step="1" name="age" required>
                        </div>                            -->
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input id="email" class="form-control " type="email" name="email" required>
                        </div> 
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input id="password" class="form-control " type="password" name="password" required>
                        </div>  
                        <!-- <form id="signupForm" action="/api/file" enctype="multipart/from-data" method="POST">
